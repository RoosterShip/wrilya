{
    "compilerOptions": {
        "target": "es2021",
        "module": "esnext",
        "moduleResolution": "node",
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["vite/client"],
        "noEmit": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}